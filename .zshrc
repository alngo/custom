## Loading Custom Promt
if [ -f ~/.zsh/zsh_classy_custom ]; then
	. ~/.zsh/zsh_classy_custom
fi

## Foreach cmd...
precmd() { eval "$PROMPT_COMMAND" }
precmd_functions=(prompt_cmd)

#===============================================================================#
# => Theme & colors															  	#
#===============================================================================#

## ls command theme
export CLICOLOR=1
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx
alias ls='ls -Fh'

